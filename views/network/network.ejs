<!DOCTYPE html>
<html>

<head>
    <title>Integrate configure</title>
    <%- include ../shared/headerInclude.ejs %>
</head>

<body class="left-side-collapsed">
    <section>
        <%- include ../shared/header.ejs %>
            <div class="main-content">

                <div class="wrapper" style="padding: 0 20px 20px 20px">
                    <h3>Configure a new integrate network</h3><br>

                    <div>
                        <form id="networkInfo-form" class="form-horizontal" role="form">
                            <div class="form-group">
                                <label for="networkName" class="col-sm-2 control-label">Network Name</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="networkName" placeholder="network name" name="name" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="networkDesc" class="col-sm-2 control-label">Description</label>
                                <div class="col-sm-10">
                                    <textarea type="text" class="form-control" id="networkDesc" placeholder="input the description of the network" roles="3" name="desc" required></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="networkAuthor" class="col-sm-2 control-label">Author</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="networkAuthor" placeholder="please input your name" name="author" required>
                                </div>
                            </div>

                            <div class="row">
                                <div id="model-networkList" class="col-lg-6 col-md-6 col-xs-12 col-sm-12 networkList">

                                </div>
                                <div id="data-networkList" class="col-lg-6 col-md-6 col-xs-12 col-sm-12 networkList">

                                </div>
                            </div>

                            <div>
                                <hr>
                                <div id="loading-div" style="display: none;text-align: center;">
                                    <i class="fa fa-spinner fa-spin fa-3x fa-fw" aria-hidden="true" style="margin: 2px auto;"></i>
                                </div>
                                <div class="form-group" style="">
                                    <div class="col-sm-offset-2 col-sm-4">
                                        <button type="submit" class="btn btn-primary" id="submit-form-btn">Submit</button>
                                    </div>
                                </div>
                            </div>

                        </form>

                    </div>
                </div>

                <%- include ../shared/footer.ejs %>

            </div>
    </section>
    <%- include ../shared/footerInclude.ejs %>
</body>

</html>